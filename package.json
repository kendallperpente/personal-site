{
  "name": "personal-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:turbo": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "db:init": "wrangler d1 execute contact-us-personal-site --file=./database/schema.sql",
    "db:local-init": "wrangler d1 execute contact-us-personal-site --local --file=./database/schema.sql",
    "db:query": "wrangler d1 execute contact-us-personal-site --command",
    "db:local-query": "wrangler d1 execute contact-us-personal-site --local --command",
    "migrate": "node database/migrate.js",
    "migrate:status": "node database/migrate.js --status",
    "migrate:local": "node database/migrate.js --local",
    "migrate:prod": "node database/migrate.js --prod",
    "migrate:help": "node database/migrate.js --help"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.8.0",
    "next": "15.5.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.34.0"
  }
}
